---
// Header.astro
---
<header class="header">
    <div class="logo">tmint</div>
    <div class="header-actions">
        <button class="theme-toggle" id="theme-toggle-btn">
            <span class="icon"><i class="fas fa-moon"></i></span>
        </button>
        <div class="progress-bar-container">
            <div class="progress-bar"></div>
        </div>
        <div class="menu-icon" id="menu-icon">
            <div class="bar1"></div>
            <div class="bar2"></div>
        </div>
    </div>
</header>

<style>
/* Header (Fixed) */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 0 20px;
  position: fixed;
  top: 0;
  left: 0;
  height: 72px;
  z-index: 1000;
  
  backdrop-filter:blur(5px);

  color: var(--text-color-dark); 
  transition: background-color 0.3s, color 0.3s;
}

body.light-mode .header {
  background-color: var(--bg-color-light); 
  color: var(--text-color-light); 
}

.logo {
  font-family: 'Pacifico', cursive;
  font-size: 1.5rem;
  font-weight: 500;
  color: #f1aaa7;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20px;
}

.theme-toggle, .menu-icon {
  transition: all 0.3s ease;
}

.theme-toggle {
  background-color: var(--sidebar-bg-dark);
  padding: 8px;
  border-radius: 50px;
  font-size: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.theme-toggle i {
  color: #f1aaa7;
}

body.light-mode .theme-toggle {
  background-color: var(--sidebar-bg-light);
}

.theme-toggle:hover {
  transform: translateY(-3px);
  background-color: #444;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
}

.theme-toggle .icon {
  font-size: 1.25rem;
  color: #e4d8ff;
}

/* Estilos para el menú hamburguesa */
.menu-icon {
  display: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.menu-icon div {
  background-color: var(--text-color-dark);
  border-radius: 5px;
  transition: 0.4s;
}

.bar1 {
  width: 22px;
  height: 2px;
  margin-bottom: 5px;
  transition: transform 0.3s ease;
}

.bar2 {
  width: 16px;
  height: 2px;
  transition: transform 0.3s ease;
}

body.light-mode .menu-icon div {
  background-color: var(--text-color-light);
}

/* Animación para el menú hamburguesa */
.change .bar1 {
  transform: rotate(-45deg) translate(0px, 5px); /* Rotación y traducción ajustada */
  width: 19px;
}

.change .bar2 {
  transform: rotate(45deg) translate(0px, -5px); /* Rotación y traducción ajustada */
  width: 19px;
}

.menu-icon:hover div {
  background-color: #f1aaa7;
}

@media (max-width: 768px) {
  .menu-icon {
    display: flex;
    flex-direction: column;
    align-items: end;
  }

  .theme-toggle {
    padding: 6px;
  }
}
</style>

